#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define nn '\n'

int main()
{
   int n,m;
   cin>>n>>m;
   
   map<pair<int,int>,int>mp;

   int mat[m][n];

   for(int i = 0; i < m; i++)
   {
       for(int j = 0; j < n; j++)
       {
           cin>>mat[i][j];

           if(j > 0)
           {
               int x = mat[i][j];
               int y = mat[i][j -1];

               pair<int,int> p;

               p.first = x;
               p.second = y;

               mp[p] = 1;
               mp[make_pair(y,x)] = 1;
           }
       }
   }
   int ans = 0;

   for(int i = 1; i <= n; i++)
   {
       for(int j = i + 1; j <= n; j++)
       {
            if(mp[make_pair(i,j)] == 0)
            {
                ans++;
            }
       }
   }
   cout<<ans<<nn;
    return 0;
}
