#include<bits/stdc++.h>
using namespace std;
int main()
{
    int up=0,low=0;
    string n;
    cin>>n;
    /* mone kori sAdaT 1 ta string ( sAdaT )
    string ti te upper letter 2 
                 lower letter 3
                 
    if(islower(n[i])) er maddome 
        upper or lower letter gula 
        gonona korte parbo*/
        
    for(int i=0; i<n.size(); i++)
    {
        if(islower(n[i]))
        {
            low++;
        }
        else
        {
            up++;
        }
    }
}
